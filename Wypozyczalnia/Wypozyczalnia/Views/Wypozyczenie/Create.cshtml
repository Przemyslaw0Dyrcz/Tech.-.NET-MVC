@model Wypozyczalnia.ViewModels.WypozyczenieViewModel

@{
    ViewData["Title"] = "Nowe wypożyczenie";
}

<h2>Nowe wypożyczenie</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id_klient"></label>
        <select asp-for="Id_klient" class="form-control">
            <option value="0">-- wybierz klienta --</option>
            @foreach (var item in Model.Klienci)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="Id_klient" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Id_sprzetu"></label>
        <select asp-for="Id_sprzetu" class="form-control">
            <option value="0">-- wybierz sprzęt --</option>
            @foreach (var item in Model.Sprzety)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="Id_sprzetu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data_wypozyczenia"></label>
        <input asp-for="Data_wypozyczenia" class="form-control" />
        <span asp-validation-for="Data_wypozyczenia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data_zwrotu"></label>
        <input asp-for="Data_zwrotu" class="form-control" />
        <span asp-validation-for="Data_zwrotu" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Wypożycz</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
