@model Wypozyczalnia.Models.Klient

<h2>Czy na pewno chcesz usunąć tego klienta?</h2>

<div>
    <h4>@Model.Imie @Model.Nazwisko</h4>
    <p>Telefon: @Model.Telefon</p>
    <p>Data rejestracji: @Model.Data_rejestracja.ToShortDateString()</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id_klient" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
